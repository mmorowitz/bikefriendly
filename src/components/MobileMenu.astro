---
// MobileMenu component - Mobile navigation overlay (Phase 2)
// Will be hydrated for interactive menu toggle
---

<div class="mobile-nav-overlay" id="mobile-nav-overlay">
  <div class="mobile-nav-menu" id="mobile-nav-menu">
    <div class="mobile-nav-header">
      <img 
        src="/images/logo.jpg" 
        alt="Bikefriendly" 
        class="mobile-nav-logo"
        width="120"
        height="40"
      />
      <button class="mobile-nav-close" id="mobile-nav-close" aria-label="Close menu">
        ×
      </button>
    </div>
    
    <nav class="mobile-nav-links" role="navigation">
      <a href="/" class="mobile-nav-link">=ú Map</a>
      <a href="/contact" class="mobile-nav-link">=ç Contact</a>
      <a href="/faq" class="mobile-nav-link">S FAQ</a>
      <a href="/sponsorship" class="mobile-nav-link">=¼ Sponsor</a>
    </nav>
    
    <div class="mobile-nav-footer">
      <p class="mobile-nav-tagline">Find bike-friendly businesses in Chicago</p>
    </div>
  </div>
</div>

<style>
  .mobile-nav-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition: all var(--transition, 200ms ease);
  }

  .mobile-nav-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  .mobile-nav-menu {
    position: fixed;
    top: 0;
    right: 0;
    height: 100vh;
    width: 280px;
    background-color: var(--background-color, white);
    box-shadow: var(--shadow-lg, 0 10px 15px rgba(0, 0, 0, 0.1));
    z-index: 1001;
    transform: translateX(100%);
    transition: transform var(--transition-slow, 300ms ease);
    overflow-y: auto;
    display: flex;
    flex-direction: column;
  }

  .mobile-nav-overlay.active .mobile-nav-menu {
    transform: translateX(0);
  }

  .mobile-nav-header {
    padding: var(--space-4, 1rem);
    border-bottom: 1px solid var(--border-color, #e2e8f0);
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-shrink: 0;
  }

  .mobile-nav-logo {
    height: 32px;
    width: auto;
    object-fit: contain;
  }

  .mobile-nav-close {
    background: none;
    border: none;
    font-size: var(--text-2xl, 1.5rem);
    color: var(--text-color, #1e293b);
    padding: var(--space-2, 0.5rem);
    min-height: var(--touch-target-size, 44px);
    min-width: var(--touch-target-size, 44px);
    cursor: pointer;
    border-radius: var(--radius, 0.375rem);
    transition: background-color var(--transition, 200ms ease);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .mobile-nav-close:hover {
    background-color: var(--light-bg, #f8fafc);
  }

  .mobile-nav-links {
    padding: var(--space-4, 1rem) 0;
    flex: 1;
  }

  .mobile-nav-link {
    display: block;
    padding: var(--space-4, 1rem);
    color: var(--text-color, #1e293b);
    text-decoration: none;
    font-size: var(--text-lg, 1.125rem);
    font-weight: 500;
    border-bottom: 1px solid var(--border-color, #e2e8f0);
    transition: background-color var(--transition, 200ms ease);
    min-height: var(--touch-target-size, 44px);
    display: flex;
    align-items: center;
    gap: var(--space-2, 0.5rem);
  }

  .mobile-nav-link:hover,
  .mobile-nav-link:focus {
    background-color: var(--light-bg, #f8fafc);
    color: var(--primary-color, #1e40af);
  }

  .mobile-nav-link:last-child {
    border-bottom: none;
  }

  .mobile-nav-footer {
    padding: var(--space-4, 1rem);
    border-top: 1px solid var(--border-color, #e2e8f0);
    background-color: var(--light-bg, #f8fafc);
    flex-shrink: 0;
  }

  .mobile-nav-tagline {
    margin: 0;
    font-size: var(--text-sm, 0.875rem);
    color: var(--muted-text, #64748b);
    text-align: center;
    line-height: 1.4;
  }

  /* Hide on desktop */
  @media (min-width: 768px) {
    .mobile-nav-overlay {
      display: none;
    }
  }
</style>